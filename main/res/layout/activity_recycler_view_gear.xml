<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.thedivision.code.thedivisionclub.RecyclerViewGear"
    android:weightSum="5">


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/GearImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scaleType="center"
            android:src="@drawable/striker_vest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="火力" />

                <TextView
                    android:id="@+id/Fire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1401" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="电力" />

                <TextView
                    android:id="@+id/Electric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="267" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="体力" />

                <TextView
                    android:id="@+id/Satinment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="267" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4.0"
            android:orientation="vertical">

        <TextView
            android:id="@+id/GearName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="机密突袭者甲胄" />

        <TextView
            android:id="@+id/GearGrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="286"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/Arm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="装甲：2018" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Main1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100% 破甲" />

                <TextView
                    android:id="@+id/Main2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1600生命" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Sec1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100%火抗" />

                <TextView
                    android:id="@+id/Sec2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100%电抗" />

                <TextView
                    android:id="@+id/Sec3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100%非抗" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
